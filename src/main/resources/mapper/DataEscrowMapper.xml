<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.fisco.bcos.safekeeper.dataescrow.DataEscrowMapper">
  <resultMap id="dataEscrowMap" type="org.fisco.bcos.safekeeper.dataescrow.entity.TbDataEscrowInfo">
    <id column="account" javaType="java.lang.String" jdbcType="VARCHAR" property="account"/>
    <id column="data_entity_id" javaType="java.lang.String" jdbcType="VARCHAR" property="dataEntityId"/>
    <result column="data_status" javaType="java.lang.Integer" jdbcType="INTEGER" property="dataStatus"/>
    <result column="creator_cipher_text" javaType="java.lang.String" jdbcType="VARCHAR" property="creatorCipherText"/>
    <result column="user_cipher_text" javaType="java.lang.String" jdbcType="VARCHAR" property="userCipherText"/>
    <result column="create_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" property="createTime"/>
    <result column="modify_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP" property="modifyTime"/>
    <result column="description" javaType="java.lang.String" jdbcType="INTEGER" property="description"/>
  </resultMap>

  <sql id="ROW_COLUMN">
    account,data_entity_id,creator_cipher_text,user_cipher_text,create_time,modify_time,description
  </sql>

  <insert id="addDataRow" parameterType="org.fisco.bcos.safekeeper.dataescrow.entity.TbDataEscrowInfo">
    insert into tb_data_escrow_info
    (<include refid="ROW_COLUMN"/>)
    values(#{account},#{dataEntityId},#{creatorCipherText},#{userCipherText},UTC_TIMESTAMP(),UTC_TIMESTAMP(),#{description})
  </insert>

  <select id="queryData" parameterType="java.lang.String" resultMap="dataEscrowMap">
    select *
    from tb_data_escrow_info where account = #{account} and data_entity_id = #{dataEntityId}
    limit 1
  </select>

  <delete id="deleteDataRow" parameterType="java.lang.String">
    delete from tb_data_escrow_info where account = #{account} and data_entity_id = #{dataEntityId}
  </delete>

  <select id="countOfData" parameterType="java.lang.String" resultType="java.lang.Integer">
    select count(1) from tb_data_escrow_info where account = #{account} and data_entity_id = #{dataEntityId}
  </select>

  <select id="countOfDataOwnedByAccount" parameterType="java.lang.String" resultType="java.lang.Integer">
    select count(1) from tb_data_escrow_info where 1=1
    <if test="account != null and account != ''">
      and account = #{account}
    </if>
  </select>

  <select id="listOfDataOwnedByAccount" parameterType="org.fisco.bcos.safekeeper.dataescrow.entity.DataEscrowListParam" resultMap="dataEscrowMap">
    select * from tb_data_escrow_info
    where 1=1
    <if test="param.account != null and param.account != ''">
      and account = #{param.account}
    </if>
    <if test="param.flagSortedByTime != null and param.flagSortedByTime != ''">
      order by create_time ${param.flagSortedByTime}
    </if>
    <if test="param.start != null and param.pageSize != null">
      limit #{param.start},#{param.pageSize}
    </if>
  </select>

</mapper>
